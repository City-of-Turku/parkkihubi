{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django: Runserver",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "runserver",
        "0.0.0.0:8000"
      ],
      "django": true,
      "justMyCode": false,
      "subProcess": true
    },
    {
      "name": "Django: Runserver - nonthreading",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "runserver",
        "--nothreading",
        "0.0.0.0:8000"
      ],
      "django": true,
      "justMyCode": false,
      "subProcess": true
    },
    {
      "name": "Django: Shell",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "shell"
      ],
      "django": true,
      "justMyCode": false
    },
    {
      "name": "Django: Migrate",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "migrate"
      ],
      "django": true,
      "justMyCode": false
    },
    {
      "name": "Django: Make migrations",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "makemigrations"
      ],
      "django": true,
      "justMyCode": false
    },
    {
      "name": "Django: Collectstatic",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "collectstatic",
        "--no-input"
      ],
      "django": true,
      "justMyCode": false
    },
    {
      "name": "Run pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [],
      "django": true,
      "justMyCode": false
    },
    {
      "name": "React: Debug in Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/dashboard",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/src/*"
      }
    }
  ]
}
